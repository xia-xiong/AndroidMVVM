<resources>
    <!--自定义shape -->
    <declare-styleable name="ShapeView">
        <attr name="sv_shapeMode" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="sv_fillColor" format="color|reference" />
        <attr name="sv_pressedColor" format="color" />
        <attr name="sv_strokeColor" format="color" />
        <attr name="sv_strokeWidth" format="dimension" />
        <attr name="sv_cornerRadius" format="dimension" />
        <attr name="sv_top_left_cornerRadius" format="dimension" />
        <attr name="sv_cornerPosition">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomLeft" value="4" />
            <flag name="bottomRight" value="8" />
        </attr>
        <attr name="sv_activeEnabled" format="boolean" />
        <attr name="sv_drawablePosition" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="sv_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
        </attr>
        <attr name="sv_startColor" format="color" />
        <attr name="sv_endColor" format="color" />
        <attr name="sv_orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="LEFT_RIGHT" value="1" />
        </attr>
        <attr name="sv_is_center" format="boolean"/>
    </declare-styleable>
    <!--自定义shape group-->
    <declare-styleable name="ShapeConstraintLayout">
        <!--shape模式-->
        <attr name="svg_shapeMode" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <!--填充颜色-->
        <attr name="svg_fillColor" format="color" />
        <!--描边颜色-->
        <attr name="svg_strokeColor" format="color" />
        <!--描边宽度-->
        <attr name="svg_strokeWidth" format="dimension" />
        <!--圆角大小-->
        <attr name="svg_cornerRadius" format="dimension" />
        <!--圆角位置-->
        <attr name="svg_cornerPosition">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomLeft" value="4" />
            <flag name="bottomRight" value="8" />
        </attr>
        <!--渐变开始颜色-->
        <attr name="svg_startColor" format="color" />
        <!--渐变结束颜色-->
        <attr name="svg_endColor" format="color" />
        <!--渐变方向-->
        <attr name="svg_orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="LEFT_RIGHT" value="1" />
        </attr>
        <!--是否带有阴影-->
        <attr name="svg_withElevation" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PrettyImageView">
        <attr name="shape_type">
            <enum name="SHAPE_CIRCLE" value="0" />
            <enum name="SHAPE_ROUND" value="1" />
        </attr>
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="left_top" format="dimension" />
        <attr name="right_top" format="dimension" />
        <attr name="right_bottom" format="dimension" />
        <attr name="left_bottom" format="dimension" />
        <attr name="corner_radius" format="dimension" />
        <attr name="show_border" format="boolean" />
        <attr name="show_circle_dot" format="boolean" />
        <attr name="circle_dot_color" format="color" />
        <attr name="circle_dot_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SendCodeTextView">
        <attr name="resendTime" format="integer" />
    </declare-styleable>
</resources>